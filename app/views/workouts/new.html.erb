<div class="workout-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">今日の筋トレを記録しよう！</h1>
        <%= form_for @workout do |f| %>
          <div class="form-group">
            <%= f.label :写真 %>
            <%= f.file_field :image, accept: 'image/jpg,image/jpeg,image/png' %>
          </div>
          <div class="form-group">
            <%= f.label :今日の筋トレ内容 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <% @workout.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
