<div class="workout-index-wrapper">
<h1>みんなの筋トレ日記</h1>
  <div class="container">
    <% @workouts.each do |workout| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="workout-index-single">
            <h2 class="workout-author">
              <%= workout.user.name %>
            </h2>
            <p class="workout-text">
              <%= workout.description %>
            </p>
            <%= image_tag 'icons/heart-black.png', class: 'workout-index-icon' %>
            <%= image_tag 'icons/comment.png', class: 'workout-index-icon' %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>