<div class="workout-show-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">投稿詳細ページ</h1>
        <div class="workout-show">
          <!-- 投稿者の名前を表示 -->
          <h2 class="workout-author">
            <%= @workout.user.name %>
          </h2>
          <!-- 投稿の内容を表示 -->
          <p class="workout-text">
            <%= @workout.description %>
          </p>
          <!-- いいねボタンを表示 -->
          <% if !@workout.like_users.include?(current_user) %>
            <%= link_to likes_path(id: @workout.id), method: :post do %>
              <i class="far fa-heart like-btn" ></i>
            <% end %>
          <% else %>
            <%= link_to likes_path(id: @workout.id), method: :delete do %>
              <i class="fas fa-heart unlike-btn"></i>
            <% end %>
          <% end %>
          <!-- いいね数を表示 -->
          <%= @workout.like_users.count %>
          <!-- コメントマークを表示 -->
          <%= link_to comments_new_path(id: @workout.id), method: :get do %>
            <i class="far fa-comment"></i>
          <% end %>
          <!-- 投稿された時間を表示 -->
          <div class="workout-time">
            <%= @workout.created_at %>
          </div>
          <!-- 削除ボタンを表示 -->
          <%= link_to workout_path(id: @workout.id), method: :delete do %>
            <div class="destroy-btn"><i class="fas fa-trash-alt"></i>投稿を削除</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>