<div class="user-edit-wrapper">
  <div class="container">
    <div class="row">
      <div class="user-edit-heading">
        <div class="col-md-6 col-md-offset-3">
          <h2 class="title">プロフィール編集</h2>
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :名前, class: 'text-white' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :身長, class: 'text-white' %>
              <%= f.text_field :height, class: 'form-control' %>
            </div>            
            <div class="form-group">
              <%= f.label :体重, class: 'text-white' %>
              <%= f.text_field :weight, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :自己紹介, class: 'text-white' %>
              <%= f.text_field :self_introduction, class: 'form-control' %>
            </div>
          　<%= f.submit "登録", class: 'btn-block btn-white' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>