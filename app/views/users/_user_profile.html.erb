<div class="user-top-wrapper">
  <%= image_tag @user.image_background.url, class:"user-background-image" %>
  <%#= image_tag('silentsiren.jpg', class: "user-background-image") %>
  <div>
    <%= image_tag @user.image_icon.url, class:"user-icon" %>
    <%#= image_tag('icons/kawauso.png', class:"user-icon") %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="user-name"><%= @user.name %></div>
        <!-- ログインしているユーザー以外は編集とログアウトが操作できない -->
        <% if current_user.id == @user.id %>
          <%= link_to edit_user_path(current_user) do %>
            <div class="btn btn-primary edit-btn">プロフィール編集</div>
          <% end %>
          <%= link_to logout_path, method: :delete do %>
            <div class="btn btn-danger edit-btn">ログアウト</div>
          <% end %>
        <% end %>
      
  　　<section class="stats">
        <%= render 'shared/stats' %>
      </section>
      </div>
      <div class="col-xs-6 col-xs-offset-3">
        <div class="user-status text-center">
          <ul>
            <li>
              <div class="status-label">-------身長-------</div>
              <div class="status-value"><%= user.height %></div>
            </li>
            <li>
              <div class="status-label">-------体重-------</div>
              <div class="status-value"><%= user.weight %></div>
            </li>
            <li>
              <div class="status-label">-----自己紹介-----</div>
              <div class="status-value"><%= user.comment %></div>
            </li>
          </ul>
        </div>
        <%= render 'follow_form' if logged_in? %>
        <div class="user-data">
          <p>名前：<%= @user.name %></p>
        </div>
    </div>
  </div>
</div>
<!--ユーザーのトレーニングデータ-->
<div class="user-data-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">
        <div class="data-sub-title">トレーニングメニュー</div>
      </div>
      <div class="col-xs-4 col-xs-offset-2">
        <div class="data-sub-title">体重グラフ</div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">  
        <%= link_to menus_path(current_user.id) do %> 
          <%= image_tag 'icons/f_dumbbell.jpg' %>
        <% end %>
      </div>
      <div class="col-xs-4 col-xs-offset-2"> 
        <%= link_to weights_path do %>
          <%= image_tag 'icons/f_graph.jpg' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="user-index-wrapper">
  <div class="container">
    <% if @user.workouts.any? %>
      <div class="row">
        <div class="col-md-12">
          <h2><%= @user.name %>さんの投稿一覧</h2>
          <p class="workout-index">
            <ol class="microposts">
              <%= render "workouts/workout" %>
            </ol>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>