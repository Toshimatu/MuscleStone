<span><i class="fas fa-arrow-left"></i>投稿一覧へ戻る</span>
<h1>ユーザー詳細ページ</h1>

<div class="user-top-wrapper">
  <div class="container">
    <div class="user-icon">
      <%= image_tag('icons/f_duck.jpg') %>
    </div>
    <!-- ログインしているユーザー以外は編集とログアウトが操作できない -->
    <% if current_user.id == @user.id %>
      <%= link_to edit_user_path(current_user) do %>
        <div class="edit-btn">編集</div>
      <% end %>
      <%= link_to logout_path, method: :delete do %>
        <div class="logout-btn">ログアウト</div>
      <% end %>
    <% end %>
    
　　<section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <div class="status text-center">
      <ul>
        <li>
          <div class="status-label">名前</div>
          <div class="status-value"><%= user.name %></div>
        </li>
        <li>
          <div class="status-label">身長</div>
          <div class="status-value"><%= user.height %></div>
        </li>
        <li>
          <div class="status-label">体重</div>
          <div class="status-value"><%= user.weight %></div>
        </li>
      </ul>
      <div class="status comment text-center ">
        <ul>
          <li>
            <div class="status-label">自己紹介</div>
            <div class="status-value"><%= user.comment %></div>
          </li>
        </ul>
      </div>
    </div>
    <%= render 'follow_form' if logged_in? %>
    <div class="user-data">
      <p>名前：<%= @user.name %></p>
    </div>
  </div>
</div>

<div class="user-data-wrapper">
  <div class="container">
    <div class="row">
      <div class="user-heading">
        <div class="col-md-11 col-md-offset-1">
          <p>ここにマイデータという文字表記をする</p>
        </div>
        <div class="user-menu-heading">
          <div class="col-md-11 col-md-offset-1">
            <p class="training-menu">トレーニングメニュー</p>
            <p class="calender">カレンダー</p>
            <p class="graph">グラフ</p>
            <%= link_to menus_path(current_user.id) do %> 
              <%= image_tag 'icons/f_dumbbell.jpg' %>
            <% end %>
            <%= link_to "#" do %>
              <%= image_tag 'icons/f_note.jpg' %>
            <% end %>
            <%= link_to weights_path do %>
              <%= image_tag 'icons/f_graph.jpg' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="user-index-wrapper">
  <div class="container">
    <% if @user.workouts.any? %>
      <div class="row">
        <div class="col-md-12">
          <h2><%= @user.name %>さんの投稿一覧</h2>
          <p class="workout-index">
            <ol class="microposts">
              <%= render "workouts/workout" %>
            </ol>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>