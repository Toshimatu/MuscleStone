<h1>メニュー追加ページ</h1>
<div class="menu-index-wrapper">
  <div class="container">
    <h1 class="menus-heading">さんのトレーニングメニュー</h1>
    <% @menus.each do |menu| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <div class="menu-index-single">
            <h2 class="menu-author">
              <%= link_to "#" do %>
                <%= menu.user.name %>
              <% end %>
            </h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>